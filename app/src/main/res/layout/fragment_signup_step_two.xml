<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="Fragments.SignupStepTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signup_sponsor_first_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_custom"
            android:hint="Sponsor's first name"
            android:inputType="text"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/signup_sponsor_last_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_custom"
            android:hint="Sponsor's last name"
            android:inputType="text"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/signup_sponsor_area_code"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_custom"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/signup_sponsor_phone_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_custom"
                android:hint="Sponsor's phone number"
                android:inputType="number"
                android:textAlignment="center"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/signup_security_question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_custom"/>


        <EditText
            android:id="@+id/signup_security_answer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_custom"
            android:hint="Security Answer"
            android:inputType="text"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/signup_step_one_back_button"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/left_button_custom"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Back"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/signup_step_two_submit_button"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/right_button_custom"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>